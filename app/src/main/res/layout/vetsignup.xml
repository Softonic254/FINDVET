<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_light_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/loginfarmer"
            android:layout_marginTop="130dp"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/vet_signup"
            android:layout_gravity="center"
            android:textColor="#080"
            android:textSize="25sp"
            tools:targetApi="jelly_bean" />

        <LinearLayout
            android:id="@+id/vetdetails"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:isScrollContainer="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterMaxLength="15"
                    app:counterTextAppearance="@color/colorPrimary">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/vetname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:fontFamily="serif"
                        android:hint="@string/full_name"
                        android:inputType="text"
                        android:textSize="16sp"
                        tools:targetApi="m"
                        android:drawableStart="@drawable/ic_person" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/vetemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:fontFamily="serif"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="+254  7"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/code">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/vetContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="sans-serif"
                            android:hint="@string/contact"
                            android:inputType="number"
                            android:maxLength="8"
                            android:textColor="#000"
                            android:textSize="18sp" />

                    </android.support.design.widget.TextInputLayout>


                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/regNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="serif"
                        android:hint="@string/registration_number"
                        android:inputType="textCapCharacters"
                        android:drawableLeft="@drawable/ic_icon"
                        android:drawablePadding="12dp"
                        android:maxLength="8"
                        android:textColor="#666"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/countyarea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="serif"
                        android:hint="Area of operation (County)"
                        android:inputType="textCapCharacters"
                        android:drawableLeft="@drawable/ic_location_on_black_24dp"
                        android:drawablePadding="12dp"
                        android:maxLength="8"
                        android:textColor="#666"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/vetpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:fontFamily="serif"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/vetconfirmpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawableLeft="@drawable/ic_lock"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:fontFamily="serif"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/vetsignupBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="#080"
                android:text="@string/signup"
                android:textColor="#FFF"
                android:layout_margin="20dp"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/vetlogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account_login"
                android:textAllCaps="false"
                android:background="#FFF"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
